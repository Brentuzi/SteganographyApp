<Window x:Class="SteganographyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steganography App" Height="450" Width="800">
    <Grid>
        <Image x:Name="ImageControl" HorizontalAlignment="Left" Height="250" Margin="10,10,0,0" VerticalAlignment="Top" Width="250" Stretch="Uniform"/>
        <Button x:Name="LoadImageButton" Content="Загрузить изображение" HorizontalAlignment="Left" Margin="10,260,0,0" VerticalAlignment="Top" Width="250" Click="LoadImageButton_Click"/>
        <Button x:Name="HideFileButton" Content="Скрыть файл" HorizontalAlignment="Left" Margin="10,305,0,0" VerticalAlignment="Top" Width="250" Click="HideFileButton_Click"/>
        <Button x:Name="ExtractFileButton" Content="Извлечь файл" HorizontalAlignment="Left" Margin="10,345,0,0" VerticalAlignment="Top" Width="250" Click="ExtractFileButton_Click"/>
        <TextBox x:Name="SecretKeyTextBox" HorizontalAlignment="Left" Height="23" Margin="10,385,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <Label Content="Секретный ключ:" HorizontalAlignment="Left" Margin="10,365,0,0" VerticalAlignment="Top" Width="250"/>
    </Grid>
</Window>
